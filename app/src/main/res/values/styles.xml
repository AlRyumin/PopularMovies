<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MovieItem">
        <item name="android:paddingStart">@dimen/content_padding</item>
        <item name="android:paddingEnd">@dimen/content_padding</item>
    </style>

    <style name="MovieTitle" parent="MovieItem">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/movie_title_text_size</item>
        <item name="android:layout_marginBottom">@dimen/content_margin</item>
    </style>

    <style name="MovieContent">
        <item name="android:paddingBottom">@dimen/content_padding</item>
        <item name="android:lineSpacingMultiplier">7</item>
        <item name="android:letterSpacing">10</item>
    </style>

    <style name="MovieDescription" parent="MovieItem">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginTop">@dimen/content_margin</item>
    </style>

    <style name="CustomLabel" parent="MovieItem">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReviewAuthor">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/content_padding</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ReviewContent">
        <item name="android:paddingStart">@dimen/content_padding</item>
        <item name="android:paddingEnd">@dimen/content_padding</item>
        <item name="android:paddingBottom">@dimen/content_padding</item>
    </style>

    <style name="DetailReviewContent" parent="ReviewContent">
        <item name="android:paddingTop">@dimen/content_padding</item>
    </style>

    <style name="ButtonFullReview" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="IconButtonClose" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/square_icon_button_size</item>
        <item name="android:layout_height">@dimen/square_icon_button_size</item>
        <item name="android:layout_marginTop">@dimen/content_padding</item>
        <item name="android:layout_marginEnd">@dimen/content_padding</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>
</resources>
