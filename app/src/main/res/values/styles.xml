<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="MovieItem">
        <item name="android:paddingStart">@dimen/content_padding</item>
        <item name="android:paddingEnd">@dimen/content_padding</item>
    </style>

    <style name="MovieTitle" parent="MovieItem">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/movie_title_text_size</item>
        <item name="android:layout_marginBottom">@dimen/content_margin</item>
    </style>

    <style name="MovieContent">
        <item name="android:paddingBottom">@dimen/content_padding</item>
        <item name="android:lineSpacingMultiplier">7</item>
        <item name="android:letterSpacing">10</item>
    </style>

    <style name="MovieDescription" parent="MovieItem">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginTop">@dimen/content_margin</item>
    </style>

    <style name="CustomLabel" parent="MovieItem">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReviewAuthor">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/content_padding</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ReviewContent">
        <item name="android:paddingStart">@dimen/content_padding</item>
        <item name="android:paddingEnd">@dimen/content_padding</item>
        <item name="android:paddingBottom">@dimen/content_padding</item>
    </style>

    <style name="DetailReviewContent" parent="ReviewContent">
        <item name="android:paddingTop">@dimen/content_padding</item>
    </style>

    <style name="ButtonFullReview" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="IconButtonClose" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/square_icon_button_size</item>
        <item name="android:layout_height">@dimen/square_icon_button_size</item>
        <item name="android:layout_marginTop">@dimen/content_padding</item>
        <item name="android:layout_marginEnd">@dimen/content_padding</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="ActionBar">
        <item name="background">@drawable/top_bar_background</item>
    </style>

    <style name="ActivityMain">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:paddingStart">@dimen/main_spacing_horizontal</item>
        <item name="android:paddingEnd">@dimen/main_spacing_horizontal</item>
    </style>

    <style name="MainBannerItem">
        <item name="android:background">@drawable/main_banner_background</item>
    </style>

    <style name="MainBannerItemWrapper">
        <item name="android:background">@drawable/main_banner_border</item>
    </style>

    <style name="MainBannerGridView">
        <item name="android:numColumns">auto_fit</item>
        <item name="android:horizontalSpacing">@dimen/horizontal_grid_spacing</item>
        <item name="android:verticalSpacing">@dimen/grid_spacing</item>
        <item name="android:paddingTop">@dimen/grid_padding</item>
        <item name="android:paddingBottom">@dimen/grid_padding</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <style name="MainListTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
